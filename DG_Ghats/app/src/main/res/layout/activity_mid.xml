<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/content_main">



    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

    <Button
        android:id="@+id/startbtn11"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Origin"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#F0F3EC"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_bg_transparent"
        app:layout_constraintStart_toStartOf="@+id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@+id/nav_host_fragment"/>


    <Button
        android:id="@+id/startbtn12"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="State wise info"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#F0F3EC"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:background="@drawable/button_bg_transparent"
        app:layout_constraintStart_toStartOf="@+id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@+id/nav_host_fragment"/>




    <Button
        android:id="@+id/startbtn13"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Vocal for local"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="300dp"
        android:background="@drawable/button_bg_transparent"
        app:layout_constraintStart_toStartOf="@+id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@+id/nav_host_fragment"/>



    <Button
        android:id="@+id/startbtnm"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:text="know your location"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#FBFBFB"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="650dp"
        android:background="@drawable/button_bg_transparent"
        app:layout_constraintStart_toStartOf="@+id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@+id/nav_host_fragment"/>


    <Button
        android:id="@+id/startbtn15"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="KHUMBH"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#FBFBFB"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="550dp"
        android:background="@drawable/button_bg_transparent"
        app:layout_constraintStart_toStartOf="@+id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@+id/nav_host_fragment"/>


</androidx.constraintlayout.widget.ConstraintLayout>