<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/content_main">
    

    <VideoView
        android:id="@+id/videohome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

    <Button
    android:id="@+id/startbtn1"
    android:layout_width="300dp"
    android:layout_height="60dp"
    android:text="UTTARAKHAND"
    android:textStyle="bold"
    android:textSize="30sp"
    android:textColor="#F0F3EC"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="100dp"
        android:background="@drawable/button_bg_transparent"
    app:layout_constraintStart_toStartOf="@+id/nav_host_fragment"
    app:layout_constraintEnd_toEndOf="@+id/nav_host_fragment"/>


    <Button
        android:id="@+id/startbtn2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="UTTAR PRADESH"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#FBFBFB"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="@+id/nav_host_fragment"
        android:background="@drawable/button_bg_transparent"
        app:layout_constraintEnd_toEndOf="@+id/nav_host_fragment"/>

    <Button
        android:id="@+id/startbtn3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="DELHI"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="#800000"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="300dp"
        android:background="@drawable/button_bg_transparent"
        app:layout_constraintStart_toStartOf="@+id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@+id/nav_host_fragment"/>


    <Button
        android:id="@+id/startbtn4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="BIHAR"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#FBFBFB"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="500dp"
        android:background="@drawable/button_bg_transparent"
        app:layout_constraintStart_toStartOf="@+id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@+id/nav_host_fragment"/>


    <Button
        android:id="@+id/startbtn5"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="WEST BENGAL"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#Ffff"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="600dp"
        android:background="@drawable/button_bg_transparent"
        app:layout_constraintStart_toStartOf="@+id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="@+id/nav_host_fragment"/>



</androidx.constraintlayout.widget.ConstraintLayout>